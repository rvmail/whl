<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px660"
    android:layout_height="@dimen/px350"
    android:layout_gravity="center"
    android:background="@android:color/black"
    android:gravity="center"
    android:padding="@dimen/px42" >

    <TextView
        android:id="@+id/dialog_tv_call_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/update_failed_hint"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px30" />

    <TextView
        android:id="@+id/dialog_tv_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_tv_call_service"
        android:layout_marginTop="@dimen/px100"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/text_positive"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px42" />

</RelativeLayout>