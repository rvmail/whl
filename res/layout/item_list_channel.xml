<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_channel"
    android:layout_width="@dimen/px424"
    android:layout_height="@dimen/px72"
    android:background="@drawable/item_selector_channel"
    >
    <ImageView 
        android:id="@+id/iv_item_channel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:src="@drawable/bg_channel_item_normal"
		android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_item_channel"
        android:layout_width="@dimen/px255"
        android:layout_height="wrap_content"
        style="@style/MovieRBText"
        android:layout_centerInParent="true"
        android:textSize="@dimen/px35"
        android:gravity="center"
        />
</RelativeLayout>